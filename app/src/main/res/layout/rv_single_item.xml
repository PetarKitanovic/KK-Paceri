<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    app:cardCornerRadius="30dp"
    app:cardElevation="10dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/ivMalaSlika1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        app:cardCornerRadius="25dp">

        <ImageView
            android:id="@+id/rv_image_kontakta"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            tools:srcCompat="@drawable/s1" />
    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/tv_recycler_ime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/ivMalaSlika1"
        android:textSize="18sp"
        tools:text="Ime" />

    <TextView
        android:id="@+id/tv_recycler_prezime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="5dp"
        android:layout_toRightOf="@+id/tv_recycler_ime"
        android:textSize="18sp"
        tools:text="Prezime" />


</RelativeLayout>

